#!/usr/bin/env ruby

require_relative "../lib/synapse"

# load the config
require "yaml"

# parse synapse config file
conf_path = File.join(File.dirname(File.expand_path(__FILE__)), '../config/synapse.conf.yaml')
config = YAML::load_file(conf_path)

# create synapse object
# start synapse
s = Synapse::Synapse.new config
s.run

puts "exiting synapse"
